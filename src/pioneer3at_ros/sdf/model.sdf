<?xml version="1.0" ?>
<sdf version="1.5">
  <model name="robot">
    <pose>0 0 0.180 0 0 0</pose>
    <static>false</static>
    <link name="base_link">
      <inertial>
        <mass>14.0</mass>
        <inertia>
          <!-- http://en.wikipedia.org/wiki/List_of_moment_of_inertia_tensors
          MATLAB:
          m=14; h=0.19; w=0.4; d=0.5; 
          ixx = 1/12*m*(h^2+d^2)
          iyy = 1/12*m*(w^2+d^2) 
          izz = 1/12*m*(h^2+d^2) 
          -->
          <ixx>0.147116667</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.334951167</iyy>
          <iyz>0.0</iyz>
          <izz>0.3978345</izz>
        </inertia>
      </inertial>
      <collision name="collision1">
